<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicrosoftLearnApp.MainPage">
    <VerticalStackLayout Spacing="20" Margin="10">
        <Image Source="images.png"
                   SemanticProperties.Description="tasklist image"
                   WidthRequest="100" />

        <HorizontalStackLayout Spacing="10"
                               HorizontalOptions="CenterAndExpand">
         
        </HorizontalStackLayout>
           <Label Text="Lista de Tareas Pendientes"
                  HorizontalOptions="Center"
                  FontSize="35"/>
        
           <Entry x:Name="input"
                  Placeholder="ingresa la tarea pendiente"
                  HorizontalOptions="Center"
                  WidthRequest="450"/>
        
           <Button Text="Enviar" 
                   Clicked="Enviar"
                   HorizontalOptions="Center"
                   BackgroundColor="DarkOrange"/>

           <Label x:Name="tarea"
                  HorizontalOptions="Center"
                  FontSize="20"/>

           <Button Text="Terminado"
                   HorizontalOptions="Center"
                   BackgroundColor="DarkOrange"
                   Clicked="Button_Clicked"/>

       




    </VerticalStackLayout>



</ContentPage>
